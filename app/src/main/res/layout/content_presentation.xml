<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary">

    <ProgressBar
        android:id="@+id/progressBarSlide"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <TextView
        android:id="@+id/timer_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"/>

    <ProgressBar
        android:id="@+id/progressBarTotal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:progressDrawable="@drawable/custom_progress_bar"/>

    <TextView
        android:id="@+id/timer_total_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarTotal"
        android:textSize="@dimen/large_text_margin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>


    <android.widget.ImageButton
        android:id="@+id/prev_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarSlide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_skip_previous_black_24dp"
        android:scaleType="fitXY"
        android:background="@color/colorPrimary" />
    <android.widget.ImageButton
        android:id="@+id/start_timer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/progressBarSlide"
        android:layout_marginTop="-24dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_play_circle_filled_black_24dp"
        android:background="@color/colorPrimary" />
    <android.widget.ImageButton
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarSlide"
        android:scaleType="fitXY"
        android:src="@drawable/ic_skip_next_black_24dp"
        android:background="@color/colorPrimary" />
    <android.widget.ImageButton
        android:id="@+id/stop_timer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_timer_btn"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_stop_24dp"
        android:background="@color/colorPrimary" />

</RelativeLayout>
