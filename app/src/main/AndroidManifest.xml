<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slidetimer.oli.slidetimer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PresentationActivity"
            android:label="@string/title_activity_presentation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".slidemdfListActivity"
            android:label="@string/title_slidemdf_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".slidemdfDetailActivity"
            android:label="@string/title_slidemdf_detail"
            android:parentActivityName=".slidemdfListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".slidemdfListActivity" />
        </activity>
        <activity
            android:name=".EditSlideDetailActivity"
            android:label="@string/title_activity_edit_slide_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>
    <uses-permission android:name="android.permission.VIBRATE" />
</manifest>